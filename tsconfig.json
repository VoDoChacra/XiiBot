{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "allowJs": true,
    "checkJs": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "resolveJsonModule": true
  }
}